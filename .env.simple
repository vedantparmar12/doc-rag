# ============================================
# MCP DOCS RAG - SIMPLIFIED CONFIGURATION
# For: 400 fixed markdown files with tables & JSON
# ============================================

# ----------------
# REQUIRED
# ----------------

# Path to your 400 markdown files
DOCS_FOLDER=/path/to/your/docs

# ----------------
# EMBEDDINGS (LOCAL - FREE)
# ----------------

# Local HuggingFace embeddings (no API key needed)
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ----------------
# SEARCH SETTINGS
# ----------------

# Enable semantic search
ENABLE_SEMANTIC_SEARCH=true

# Enable reranking (improves accuracy)
ENABLE_RERANKING=true
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Max search results
MAX_RESULTS=10

# ----------------
# ADVANCED FEATURES
# ----------------

# Query Decomposition (complex questions)
ENABLE_QUERY_DECOMPOSITION=true

# Feedback System (learns over time)
ENABLE_FEEDBACK_SYSTEM=true

# Conversation Context (remembers previous queries)
ENABLE_CONVERSATION_CONTEXT=true
MAX_CONVERSATION_HISTORY=10

# ----------------
# CHUNKING
# ----------------

# HybridChunker settings
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP_TOKENS=50

# ----------------
# PERFORMANCE
# ----------------

# Index storage
INDEX_PATH=.index

# Parallel workers (auto-detects CPU cores)
MAX_WORKERS=auto

# ----------------
# LOGGING
# ----------------

LOG_LEVEL=INFO

# ============================================
# REMOVED FEATURES (Not Needed for Markdown-Only)
# ============================================

# ❌ No Image OCR (removed)
# ❌ No Incremental Indexing (400 fixed docs = fast rebuild)
# ❌ No VLM/Vision features
# ❌ No PDF support

# ============================================
# WHAT YOU GET
# ============================================

# ✅ Table extraction (critical for your docs)
# ✅ JSON code block extraction (for config examples)
# ✅ Link tracking
# ✅ Fast hybrid search (keyword + semantic)
# ✅ Query decomposition (complex questions)
# ✅ Feedback learning
# ✅ Conversation context
# ✅ $0 cost - all local!
